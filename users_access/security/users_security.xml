<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Espadesa Admins -->
        <record model="res.groups" id="group_espadesa_user_admin">
            <field name="name">Espadesa Admins</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- Record rules -->
        <record id="team_espadesa_user_admin" model="ir.rule">
            <field name="name">Access to manage Espadesa Teams</field>
            <field name="model_id" ref="model_res_users_team"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_espadesa_user_admin'))]"/>
        </record>

        <record id="shop_role_espadesa_user_admin" model="ir.rule">
            <field name="name">Access to manage Espadesa Shop Roles</field>
            <field name="model_id" ref="model_res_users_shop_role"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_espadesa_user_admin'))]"/>
        </record>

    </data>
</odoo>
