</template>

<template id="offer_black_friday" name="Black Friday" page="True">
  <t t-call="website.layout">
    <div id="wrap" class="js_sale mb16">
      <div class="container">
        <t t-call="cs_model.content_black_friday"/>
      </div>

      <div class="container oe_website_sale">
        <t t-call="cs_offer.black_friday_all_products"/>

      </div>
    </div>
  </t>
</template>

</data>
</openerp>
