<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <!-- Actualizacion de precios -->
        <record id="Update pricelist" model="ir.ui.view">
            <field name="name">Actualización de precios</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="cs_model.product_template_add_header"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                        <!-- attrs="{'invisible': [('product_variant_ids', 'is', True)]}" -->
                        <button name="beds_model.action_update_pricelist"
                                class="beds-ws" type="action"
                                string="Actualizar tarifa" groups="base.group_user"/>
                </xpath>
            </field>
        </record>

        <!-- Add button for update pricelist-->
        <record id="update_pricelist_form" model="ir.ui.view">
            <field name="name">Actualizar tarifa de precios</field>
            <field name="model">beds.ws.update.pricelist</field>
            <field name="arch" type="xml">
                <form string="Actualizar la tafifa de precios">
                    <p class="oe_grey">
                        Esta opción permite actulizar la tarifa de precios para los productos seleccionados.
                    </p>

                    <footer>
                        <button name="update_product_pricelist" string="Actualizar la tarifa de precios" type="object" class="beds-ws"/>
                        or

                        <button string="Close" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_update_pricelist" model="ir.actions.act_window">
            <field name="name">Actualizar precios por producto</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">beds.ws.update.pricelist</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <!-- Añadir la actualización para selección múltiple -->
        <record model="ir.values" id="product_update_pricelist">
            <field name="model_id" ref="product.model_product_template" />
            <field name="name">Actualizar precios</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_update_pricelist'))" />
            <field name="key">action</field>
            <field name="model">product.template</field>
        </record>


        <!-- Adde button for uncatalog products -->
        <record id="uncatalog_product_form" model="ir.ui.view">
            <field name="name">Descatalogar productos.</field>
            <field name="model">product.template.uncatalog</field>
            <field name="arch" type="xml">
                <form string="Descatalogar productos">
                    <p class="oe_grey">
                        Permite descatalogar productos. Especifica los códigos de barras separados por espacios.

                    </p>
                    <field name="products"></field>

                    <footer>
                        <button name="uncatalog_product" string="Descatalogar" type="object" class="beds-ws"/>
                        or
                        <button string="Close" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_uncatalog_product" model="ir.actions.act_window">
            <field name="name">Descatalogar productos action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template.uncatalog</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem action="beds_model.action_uncatalog_product" id="menu_product_uncatalog_product" parent="base.menu_product" sequence="99" />








    </data>
</openerp>
