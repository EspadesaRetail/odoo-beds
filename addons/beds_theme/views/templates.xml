    <!-- PRODUCT Templates -->
    <!-- Add tabs to product template -->
    <template id="website_product_tabs" inherit_id="website_sale.product" name="Website Product Tabs" customize_show="False">

      <!-- Delete standard location -->
      <xpath expr="//div[@t-field='product.website_description']" position="replace">
      </xpath>

      <xpath expr="//section[@id='product_detail']" position="inside">

        <div class="container mt8">

          <ul class="nav nav-tabs product-tabs" contenteditable="false">
            <li class="active" contenteditable="false">
              <a data-toggle="tab" href="#benefits" contenteditable="false">Beneficios clave</a>
            </li>
            <li class="" contenteditable="false">
              <a data-toggle="tab" href="#datasheet">Características técnicas</a>
            </li>
            <!--
            <li contenteditable="false">
            <a data-toggle="tab" href="#compare">Comparativa</a>
          </li>
        -->
