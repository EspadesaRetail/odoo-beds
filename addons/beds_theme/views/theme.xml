          t-att-data-default-lang="editable and 'true' if lg[0] == website.default_lang_code else None"
          t-att-data-lang="lg[0]"
          class="js_change_lang"
          >
          <t t-esc="lg[1].split('/').pop()"/>
        </a>
      -->

    </li>
  </xpath>
</template>


<template id="custom_navbar" inherit_id="website.layout" name="Custom Navbar">
  <xpath expr="//ul[@id='top_menu']" position="attributes">
    <attribute name="class">nav navbar-nav navbar-left</attribute>
  </xpath>
</template>


</data>
</openerp>
