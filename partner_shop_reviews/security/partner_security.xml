<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Espadesa Admins -->
        <record model="res.groups" id="group_espadesa_shop_admin">
            <field name="name">Espadesa Shop Admins</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- Record rules -->
        <record id="format_espadesa_user_admin" model="ir.rule">
            <field name="name">Access to manage Espadesa Shop Format</field>
            <field name="model_id" ref="model_res_partner_format"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_espadesa_shop_admin'))]"/>
        </record>

        <record id="review_espadesa_user_admin" model="ir.rule">
            <field name="name">Access to manage Espadesa Shop Review</field>
            <field name="model_id" ref="model_res_partner_review"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_espadesa_shop_admin'))]"/>
        </record>

        <record id="review_espadesa_user_admin" model="ir.rule">
            <field name="name">Access to manage Espadesa Shop Review Content</field>
            <field name="model_id" ref="model_res_partner_review_content"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_espadesa_shop_admin'))]"/>
        </record>
    </data>
</odoo>
