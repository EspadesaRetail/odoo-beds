<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Python -->
        
        <record id="python_console_tree_view" model="ir.ui.view">
            <field name="name">python.console.script.tree</field>
            <field name="model">python.console.script</field>
            <field name="arch" type="xml">
                <tree string="Python console procedures">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record id="python_console_search_view" model="ir.ui.view">
            <field name="name">python.console.script.search</field>
            <field name="model">python.console.script</field>
            <field name="arch" type="xml">
                <search string="Python">
                    <field name="code" string="Code" filter_domain="[('code','ilike',self)]"/>
                </search>
            </field>
        </record>
        
        <record id="python_console_form_view" model="ir.ui.view">
            <field name="name">Python console</field>
            <field name="model">python.console.script</field>
            <field name="arch" type="xml">
                <form string="Python console" class="oe_form_configuration">
                    <header>
                        <button string="Run script" type="object" name="execute" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group>
                            <field name="active"/>
                        </group>                        
                        <notebook>
                            <page string="Code">
                                <field name="code"/>
                            </page>
                        </notebook>    
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_python_console" model="ir.actions.act_window">
            <field name="name">Python console</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">python.console.script</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new code.
                </p>
                <p>
                    You 
                </p>
            </field>

        </record>
        
        
        <menuitem id="menu_console" name="Console" parent="base.menu_custom" sequence="50" />        
        
        <menuitem id="menu_python_console" name="Python console" parent="menu_console"
                  sequence="10" action="action_python_console"/>
        
        
        
    </data>
</openerp>
