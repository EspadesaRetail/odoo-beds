<?xml version='1.0' encoding='utf-8'?>
<odoo>

  <record id="website_sale_product_pricelist_view_form" model="ir.ui.view">
    <field name="name">website.sale.product.pricelist.view.form</field>
    <field name="model">website.sale.product.pricelist</field>
    <field name="arch" type="xml">
      <form string="Product Pricelist">
        <sheet>
          <group>
            <group name="price">
              <separator string="Pricing"/>
              <field name="taxes_id" widget="many2many_tags" options="{'no_create': True}"/>
              <field name="amount" required="True"/>
              <field name="price" readonly="1"/>
              <field name="text_price"/>
              <field name="computed_price_discount"/>
            </group>
            <group name="principal_variant">
              <separator string="Variant Pricing"/>
              <field name="list_price"/>
              <field name="price_extra"/>
              <field name="extra_price"/>
            </group>
            <group name="product">
              <separator string="Product Attributes"/>
              <field name="pricelist_id" options="{'no_create': True}" required="True"/>
              <field name="default_pricelist" invisible="1"/>
              <field name="product_template_id" options="{'no_create': True}" required="True"/>
              <field name="product_product_id" options="{'no_create': True}" required="True"/>
              <field name="product_template_attribute_value_id"/>
            </group>
            <group name="company">
              <separator string="Company"/>
              <field name="company_id" options="{'no_create': True}" required="True"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="website_sale_product_pricelist_view_tree" model="ir.ui.view">
    <field name="name">website.sale.product.pricelist.view.tree</field>
    <field name="model">website.sale.product.pricelist</field>
    <field name="arch" type="xml">
      <tree>
        <field name="product_template_id"/>
        <field name="product_product_id"/>
        <field name="pricelist_id"/>
        <field name="amount"/>
        <field name="taxes_id" widget="many2many_tags"/>
        <field name="price"/>
      </tree>
    </field>
  </record>

  <record id="website_sale_product_pricelist_view_search" model="ir.ui.view">
    <field name="name">website.sale.product.pricelist.view.search</field>
    <field name="model">website.sale.product.pricelist</field>
    <field name="arch" type="xml">
      <search string="Search Product">
        <field name="display_name"/>
        <field name="product_template_id"/>
        <field name="product_product_id"/>
        <field name="pricelist_id"/>
        <field name="default_pricelist"/>
        <field name="taxes_id"/>
        <separator/>
        <group expand="0" string="Group By">
            <filter string="Template" name="product_template_id" domain="[]" context="{'group_by':'product_template_id'}"/>
            <filter string="Product" name="product_product_id" domain="[]" context="{'group_by':'product_product_id'}"/>
            <filter string="Pricelist" name="pricelist_id" domain="[]" context="{'group_by':'pricelist_id'}"/>
            <filter string="Default Pricelist" name="default_pricelist" domain="[]" context="{'group_by':'default_pricelist'}"/>
        </group>
      </search>
    </field>
  </record>

  <record id="website_sale_product_pricelist_action" model="ir.actions.act_window">
    <field name="name">Product Pricelist</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">website.sale.product.pricelist</field>
    <field name="view_mode">tree,form</field>
    <field name="view_type">form</field>
  </record>

  <menuitem id="website_sale_product_pricelist.menu_product_pricelist"
            name="Product Pricelist"
            parent="sale.product_menu_catalog"
            action="website_sale_product_pricelist_action"
            sequence="10"
            groups="base.group_user"/>

  <menuitem id="website_sale_product_pricelist.website_menu_product_pricelist"
            name="Product Pricelist"
            parent="website_sale.menu_catalog"
            action="website_sale_product_pricelist_action"
            sequence="50"
            groups="product.group_product_variant"/>

</odoo>
