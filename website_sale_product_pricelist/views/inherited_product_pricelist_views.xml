<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="inherited_product_pricelist_view_form">
    <field name="name">inherited.product.pricelist.view.form</field>
    <field name="model">product.pricelist</field>
    <field name="inherit_id" ref="product.product_pricelist_view"/>
    <field name="arch" type="xml">

      <xpath expr="//field[@name='currency_id']" position="before">
        <field name="default_pricelist"/>
      </xpath>
      <xpath expr="//field[@name='country_group_ids']" position="after">
        <field name="country_ids"/>
        <field name="state_ids"/>
      </xpath>

    </field>
  </record>

</odoo>
