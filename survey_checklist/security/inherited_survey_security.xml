<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Survey business managers -->
        <record model="res.groups" id="group_survey_business_manager">
            <field name="name">Business Manager</field>
            <field name="category_id" ref="base.module_category_survey"/>
            <field name="implied_ids" eval="[(4, ref('survey.group_survey_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- Record rules -->
        <record id="survey_business_manager_access" model="ir.rule">
            <field name="name">Access to survey for Business Managers</field>
            <field name="model_id" ref="survey.model_survey_survey"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_survey_business_manager'))]"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

        <record id="survey_input_users_business_manager_access" model="ir.rule">
            <field name="name">Access to user_input for Business Managers</field>
            <field name="model_id" ref="survey.model_survey_user_input"/>
            <field name="domain_force">[('business_manager_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_survey_business_manager'))]"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

    </data>
</odoo>
