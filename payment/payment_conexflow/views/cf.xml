<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Incluir javascript -->
        <!--
        <template id="conexflow_assets_frontend" inherit_id="website.assets_frontend" name="Conexflow assets frontend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/payment_conexflow/static/src/js/conexflow.js"></script>                
            </xpath>
        </template>
        -->
        
        
        
        <template id="conexflow_acquirer_button">
            <form t-if="acquirer" t-att-action="tx_url" method="post" target="_self">
                <!-- Datos necesarios para realizar el pago. -->
                <input type="hidden" name="CF_XtnType" t-att-value="tx_values['CF_XtnType']"/>
                <input type="hidden" name="CF_User" t-att-value="tx_values['CF_User']"/>
                <input type="hidden" name="CF_Date" t-att-value="tx_values['CF_Date']"/>
                <input type="hidden" name="CF_Time" t-att-value="tx_values['CF_Time']"/>
                <input type="hidden" name="CF_Amount" t-att-value="tx_values['CF_Amount']"/>
                <input type="hidden" name="CF_Currency" t-att-value="tx_values['CF_Currency']"/>
                <input type="hidden" name="CF_TicketNumber" t-att-value="tx_values['CF_TicketNumber']"/>
                <input type="hidden" name="CF_Lang" t-att-value="tx_values['CF_Lang']"/>
                <input type="hidden" name="CF_MAC" t-att-value="tx_values['CF_MAC']"/>
                <input type="hidden" name="CF_UrlReply" t-att-value="tx_values['CF_UrlReply']"/>
                <input type="Hidden" name="CF_Template" t-att-value="tx_values['CF_Template']"/>
            
                <button type="submit" width="100px"
                        t-att-class="submit_class">
                    <img t-if="not submit_txt"
                         src="/payment_conexflow/static/src/img/conexflow_icon.png"/>
                    <span t-if="submit_txt">
                        <t t-esc="submit_txt"/> 
                        <span class="fa fa-long-arrow-right"/>
                    </span>
                </button>
            </form>
        </template>
    
    
    

        <template id="conexflow_result_ok" name="Conexflow Result Transaction Ok">
            <t t-call="website.layout">
                <section id="conexflow_ok">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3 mt16 mb16">
                                <h4 class="demo-subtitle mt32 mb32">Your order has been paid correctly</h4>
                                <div class="alert alert-success">
                                    <span class="pull-left fa fa-thumbs-o-up fa-3x"/>
                                    <p>Thanks for you order. <br/>We will inform you of your order status</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section id="conexflow_order" t-if="order">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 mt16 mb16">
                                <t t-call="payment_conexflow.order">
                                    <t t-set="order" t-value="order"/>
                                    <t t-set="report_url" t-value="'/report/pdf/sale.report_saleorder/%s' % order.id"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </template>

        <template id="conexflow_result_ko" name="Conexflow Result Transaction Ko">
            <t t-call="website.layout">
                <section id="conexflow_ok">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3 mt16 mb16">
                                <h4 class="demo-subtitle mt32 mb32">The payment of your order has failed</h4>
                                <div class="alert alert-danger">
                                    <span class="pull-left fa fa-thumbs-o-down fa-3x"/>
                                    <p>En error ocurred. <br/>Please contact with us and inform you about your order.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section id="conexflow_order" t-if="order">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 mt16 mb16">
                                <t t-call="payment_conexflow.order">
                                    <t t-set="order" t-value="order"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </template>

        <template id="order" name="Payment Conexflow Order">
            <t t-set="show_discount" t-value="order.env.user.has_group('sale.group_discount_per_so_line')"/>
            <div class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-10">
                                <h4>
                                    <t t-if="not report_url">
                                        Order <span t-esc="order.name"/>
                                    </t>
                                    <t t-if="report_url">
                                        <a t-att-href="report_url" target="_blank">
                                            <i class="fa fa-file-pdf-o cs-color-red"/> Order <span t-esc="order.name"/>
                                        </a>
                                    </t>
                                </h4>
                            </div>
                            <div class="col-md-2 text-right">
                                <a href="/">Back to shop</a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="mb8">
                            <strong>Date:</strong> 
                            <span t-field="order.create_date" t-field-options='{"widget": "date"}'/>
                        </div>
                        <div class='row'>
                            <div class="col-md-6">
                                <div>
                                    <strong>Invoicing Address</strong>
                                </div>
                                <div>
                                    <address t-field="order.partner_invoice_id" t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                                </div>
                            </div>
                            <div id="shipping_address" class="col-md-6">
                                <div>
                                    <strong>Shipping Address</strong>
                                </div>
                                <div>
                                    <address t-field="order.partner_shipping_id" t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                                </div>
                            </div>
                        </div>
                        <hr/>
                        <div class="row">
                            <div t-attf-class="col-md-{{ '4' if show_discount else '6' }}">
                                <strong>Product</strong>
                            </div>
                            <div class="col-md-2 text-right">
                                <strong>Unit Price</strong>
                            </div>
                            <div class="col-md-2 text-right">
                                <strong>Quantity</strong>
                            </div>
                            <t groups="sale.group_discount_per_so_line">
                                <div class="col-md-2 text-right">
                                    <strong>Discount (%)</strong>
                                </div>
                            </t>
                            <div class="col-md-2 text-right">
                                <strong>Subtotal</strong>
                            </div>
                        </div>
                        <t t-call="payment_conexflow.order_lines">
                            <t t-set="order" t-value="order"/>
                        </t>
                        <hr/>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-10 text-right">
                                        Untaxed Amount:
                                    </div>
                                    <div class="col-md-2 text-right">
                                        <span t-field="order.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "order.pricelist_id.currency_id"}'/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-10 text-right">
                                        Taxes:
                                    </div>
                                    <div class="col-md-2 text-right">
                                        <span t-field="order.amount_tax" t-field-options='{"widget": "monetary", "display_currency": "order.pricelist_id.currency_id"}'/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-10 text-right">
                                        <strong>Total:</strong>
                                    </div>
                                    <div class="col-md-2 text-right">
                                        <strong>
                                            <span t-field="order.amount_total" t-field-options='{"widget": "monetary", "display_currency": "order.pricelist_id.currency_id"}'/>
                                        </strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </template>

        <template id="order_lines" name="Payment Conexflow Order Lines">
            <t t-foreach="order.order_line" t-as="ol">
                <div class="row orders_vertical_align">
                    <div class="col-md-1 text-center">
                        <img t-att-src="'/website/image/product.product/%s/image_small/48x48' % ol.product_id.id"/>
                    </div>
                    <div id='product_name' t-attf-class="col-md-{{ '3' if show_discount else '5' }}">
                        <span t-field="ol.product_id"/>
                    </div>
                    <div class="col-md-2 text-right">
                        <span t-field="ol.price_unit" t-field-options='{"widget": "monetary", "display_currency": "order.pricelist_id.currency_id"}'/>
                    </div>
                    <div class="col-md-2 text-right">
                        <t t-if="ol._name == 'sale.order.line'">
                            <span t-esc="ol.product_uom_qty"/>
                        </t>
                        <t t-if="ol._name == 'account.invoice.line'">
                            <span t-esc="ol.quantity"/>
                        </t>
                    </div>
                    <t groups="sale.group_discount_per_so_line">
                        <div class="col-md-2 text-right">
                            <span t-field="ol.discount"/>
                        </div>
                    </t>
                    <div class="col-md-2 text-right">
                        <span t-field="ol.price_subtotal" t-field-options='{"widget": "monetary", "display_currency": "order.pricelist_id.currency_id"}'/>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
