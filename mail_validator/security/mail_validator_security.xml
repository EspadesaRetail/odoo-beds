<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="group_user_mail_validator" model="res.groups">
            <field name="name">User Mail Validator</field>
        </record>

        <record id="mail_validator_list" model="ir.rule">
            <field name="name">List of Mails</field>
            <field name="model_id" ref="model_partner_mail_list"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_user_mail_validator'))]"/>
        </record>

        <record id="mail_validator_pattern" model="ir.rule">
            <field name="name">Patterns to validate</field>
            <field name="model_id" ref="model_partner_mail_pattern"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_user_mail_validator'))]"/>
        </record>

    </data>
</odoo>
